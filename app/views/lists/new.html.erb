<div class="container py-5 bg-success" style="--bs-bg-opacity: .3;">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-success rounded p-3 shadow" style="--bs-bg-opacity: .5;">
        <h3>Create a new list</h3>
        <%= simple_form_for @list do |f| %>
          <%= f.input :name, placeholder: 'Drama, Comedy...' %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
